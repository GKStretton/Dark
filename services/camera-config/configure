echo "Starting camera configuration..."

v4l2-ctl --device /dev/top-cam -v width=1920,height=1080,pixelformat=MJPG --set-parm 60
echo "~~ TOP CAM ~~"
v4l2-ctl --device /dev/top-cam --get-fmt-video --get-parm

v4l2-ctl --device /dev/top-cam --set-ctrl \
focus_auto=0,\
exposure_auto=1

v4l2-ctl --device /dev/top-cam --set-ctrl \
gain=0,\
focus_absolute=27,\
zoom_absolute=120,\
exposure_absolute=60

v4l2-ctl --device /dev/top-cam --list-ctrls-menus

echo ""
echo "~~ FRONT CAM ~~"
v4l2-ctl --device /dev/front-cam -v width=1920,height=1080,pixelformat=MJPG --set-parm 60
v4l2-ctl --device /dev/front-cam --get-fmt-video --get-parm

v4l2-ctl --device /dev/front-cam --set-ctrl \
focus_auto=0,\
exposure_auto=1

v4l2-ctl --device /dev/front-cam --set-ctrl \
focus_absolute=40

v4l2-ctl --device /dev/front-cam --set-ctrl \
gain=0,\
zoom_absolute=100,\
exposure_absolute=200

v4l2-ctl --device /dev/front-cam --list-ctrls-menus

echo "Camera configuration done."